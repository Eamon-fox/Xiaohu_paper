<view class="container">
  <view class="header">
    <text class="title">我的收藏</text>
    <text class="beta-tag">内测</text>
  </view>

  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <view class="empty" wx:elif="{{isEmpty}}">
    <text class="empty-icon">☆</text>
    <text class="empty-text">暂无收藏</text>
    <text class="empty-tip">在文章详情页点击收藏按钮添加</text>
  </view>

  <view class="bookmark-list" wx:else>
    <view class="bookmark-item" wx:for="{{bookmarks}}" wx:key="article_id"
          bindtap="onTapArticle" data-id="{{item.article_id}}">
      <text class="bookmark-title">{{item.title}}</text>
      <view class="bookmark-meta">
        <text class="bookmark-source">{{item.journal || item.source}}</text>
        <text class="bookmark-date">收藏于 {{item.saved_at}}</text>
      </view>
      <view class="bookmark-remove" catchtap="onRemoveBookmark" data-id="{{item.article_id}}" data-index="{{index}}">
        <text>×</text>
      </view>
    </view>
  </view>
</view>
