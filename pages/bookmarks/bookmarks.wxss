/* ========== 收藏页样式 ========== */

.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 24rpx;
}

/* ========== 头部 ========== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 4rpx 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.beta-tag {
  font-size: 20rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

/* ========== 加载状态 ========== */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

/* ========== 空状态 ========== */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  margin-top: 40rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.empty-icon {
  font-size: 100rpx;
  color: #e5e7eb;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #6b7280;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.6;
}

/* ========== 收藏列表 ========== */
.bookmark-list {
  margin-top: 8rpx;
}

.bookmark-item {
  position: relative;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 20rpx 24rpx;
  padding-right: 80rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.bookmark-item:active {
  transform: scale(0.98);
  background: #f8fafc;
}

.bookmark-title {
  font-size: 30rpx;
  color: #1f2937;
  font-weight: 600;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.bookmark-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
}

.bookmark-source {
  font-size: 24rpx;
  color: #3b82f6;
  background: #eff6ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

.bookmark-date {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ========== 删除按钮 ========== */
.bookmark-remove {
  position: absolute;
  top: 50%;
  right: 16rpx;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fef2f2;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.bookmark-remove text {
  font-size: 32rpx;
  color: #ef4444;
  font-weight: 300;
}

.bookmark-remove:active {
  background: #fee2e2;
  transform: translateY(-50%) scale(0.95);
}
