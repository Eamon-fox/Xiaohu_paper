.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 32rpx;
  color: #999;
}

.empty-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #bbb;
}

.bookmark-list {
  padding: 24rpx;
}

.bookmark-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.bookmark-content {
  flex: 1;
  padding: 24rpx;
}

.bookmark-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.bookmark-meta {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}

.bookmark-source {
  margin-right: 16rpx;
  color: #666;
}

.bookmark-remove {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  color: #ff4d4f;
  font-size: 26rpx;
  border-left: 1rpx solid #f0f0f0;
}
