/* ========== 个人设置页样式 ========== */

.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 24rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #9ca3af;
}

/* ========== 用户信息卡片 ========== */
.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.25);
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-icon {
  font-size: 44rpx;
}

.user-stats {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item.clickable {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  transition: background 0.2s ease;
}

.stat-item.clickable:active {
  background: rgba(255, 255, 255, 0.15);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.25);
}

/* ========== 区块样式 ========== */
.section {
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 16rpx;
  padding: 0 4rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.title-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.section-title text:nth-child(2) {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.section-desc {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  padding-left: 38rpx;
}

/* 帮助按钮 */
.help-btn {
  width: 32rpx;
  height: 32rpx;
  background: #e5e7eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.help-btn:active {
  background: #d1d5db;
}

.help-icon {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 600;
}

/* ========== 通用卡片 ========== */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* ========== 关键词组 ========== */
.keyword-group {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.keyword-group.last {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.keyword-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
}

.label-badge {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
  font-weight: 600;
}

.label-badge.tier1 {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #b45309;
}

.label-badge.tier2 {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
}

.label-badge.tier3 {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
  color: #7c3aed;
}

.add-keyword-btn {
  width: 36rpx;
  height: 36rpx;
  background: #eff6ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  transition: all 0.2s ease;
}

.add-keyword-btn:active {
  background: #dbeafe;
  transform: scale(0.95);
}

.add-keyword-btn text {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 400;
  line-height: 1;
}

.keyword-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  min-height: 44rpx;
}

.empty-keywords {
  width: 100%;
  padding: 12rpx 0;
}

.empty-keywords text {
  font-size: 24rpx;
  color: #d1d5db;
}

.keyword-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx 8rpx 14rpx;
  border-radius: 8rpx;
  max-width: 100%;
  transition: all 0.2s ease;
}

.keyword-tag:active {
  transform: scale(0.98);
}

.keyword-tag.tier1 {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
}

.keyword-tag.tier2 {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.keyword-tag.tier3 {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.keyword-text {
  font-size: 24rpx;
  color: #374151;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 360rpx;
}

.keyword-delete {
  font-size: 26rpx;
  color: #9ca3af;
  margin-left: 8rpx;
  padding: 0 4rpx;
}

.keyword-delete:active {
  color: #ef4444;
}

/* ========== 锚点卡片 ========== */
.anchor-card {
  margin-bottom: 16rpx;
}

.anchor-card.positive {
  border-left: 4rpx solid #10b981;
}

.anchor-card.negative {
  border-left: 4rpx solid #ef4444;
}

.anchor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.anchor-title {
  display: flex;
  align-items: center;
}

.anchor-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.anchor-title text:nth-child(2) {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
}

.anchor-count {
  font-size: 22rpx;
  color: #9ca3af;
  margin-left: 10rpx;
}

.add-btn {
  padding: 8rpx 16rpx;
  background: #eff6ff;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.add-btn:active {
  background: #dbeafe;
  transform: scale(0.98);
}

.add-btn.disabled {
  background: #f1f5f9;
  opacity: 0.5;
}

.add-btn text {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: 600;
}

.add-btn.disabled text {
  color: #9ca3af;
}

.empty-hint {
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 10rpx;
  text-align: center;
}

.empty-hint text {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.6;
}

/* 锚点条目 */
.anchor-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #f0fdf4;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.anchor-item.negative-item {
  background: #fef2f2;
}

.anchor-item:last-child {
  margin-bottom: 0;
}

.anchor-content {
  flex: 1;
  min-width: 0;
  margin-right: 12rpx;
}

.anchor-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
}

.anchor-actions {
  display: flex;
  gap: 10rpx;
  flex-shrink: 0;
}

.action-btn {
  padding: 8rpx 14rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.edit {
  background: #eff6ff;
  color: #2563eb;
}

.action-btn.delete {
  background: #fef2f2;
  color: #dc2626;
}

/* ========== 提示卡片 ========== */
.tip-card {
  display: flex;
  align-items: flex-start;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #fcd34d;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.6;
}

/* ========== 操作按钮 ========== */
.actions {
  padding: 0 4rpx;
}

.save-btn {
  width: 100% !important;
  height: 92rpx !important;
  line-height: 92rpx !important;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%) !important;
  color: #ffffff !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
  border-radius: 16rpx !important;
  border: none !important;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(59, 130, 246, 0.25);
}

.save-btn:active {
  transform: scale(0.98);
}

.save-btn.disabled {
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%) !important;
  box-shadow: none;
}

.secondary-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.secondary-btn {
  flex: 1 !important;
  height: 76rpx !important;
  line-height: 76rpx !important;
  background: #ffffff !important;
  color: #6b7280 !important;
  font-size: 26rpx !important;
  font-weight: 500 !important;
  border-radius: 12rpx !important;
  border: 2rpx solid #e5e7eb !important;
  padding: 0 !important;
  margin: 0 !important;
}

.secondary-btn:active {
  background: #f8fafc !important;
}

.secondary-btn.danger {
  color: #ef4444 !important;
  border-color: #fecaca !important;
}

.secondary-btn.danger:active {
  background: #fef2f2 !important;
}

/* ========== 内测提示 ========== */
.beta-notice {
  display: flex;
  align-items: flex-start;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-top: 24rpx;
}

.beta-tag {
  font-size: 20rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.beta-text {
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.6;
}

/* ========== 底部安全区 ========== */
.safe-bottom {
  height: calc(32rpx + env(safe-area-inset-bottom));
}

/* ========== 弹窗样式 ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  animation: fadeIn 0.2s ease;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.25s ease;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.modal-close {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #9ca3af;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #f1f5f9;
}

.modal-body {
  flex: 1;
  padding: 20rpx 28rpx;
  overflow-y: auto;
}

.modal-textarea {
  width: 100%;
  min-height: 180rpx;
  max-height: 360rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
  box-sizing: border-box;
}

.modal-textarea:focus {
  border-color: #3b82f6;
  background: #ffffff;
}

.modal-footer {
  display: flex;
  padding: 20rpx 28rpx;
  gap: 16rpx;
  border-top: 1rpx solid #f1f5f9;
}

.modal-btn {
  flex: 1;
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  border-radius: 12rpx !important;
}

.modal-btn.cancel {
  background: #f1f5f9 !important;
  color: #6b7280 !important;
}

.modal-btn.cancel:active {
  background: #e5e7eb !important;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%) !important;
  color: #ffffff !important;
}

.modal-btn.confirm:active {
  transform: scale(0.98);
}

/* ========== 帮助弹窗 ========== */
.help-modal {
  width: 100%;
  max-height: 70vh;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.25s ease;
}

.help-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f1f5f9;
  background: #f8fafc;
}

.help-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
}

.help-body {
  padding: 24rpx 28rpx;
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.8;
  max-height: 50vh;
  overflow-y: auto;
}
