/* ========== 首页样式 ========== */

.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 24rpx;
}

/* ========== 头部区域 ========== */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 4rpx 20rpx;
}

.date {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
}

/* ========== 提示横幅 ========== */
.config-tip {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #bfdbfe;
}

.config-tip text {
  font-size: 24rpx;
  color: #1e40af;
}

.config-tip .tip-link {
  color: #3b82f6;
  font-weight: 600;
}

.config-tip .tip-arrow {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: bold;
}

/* 生成中状态横幅 */
.generating-banner {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid #93c5fd;
}

.generating-top {
  display: flex;
  align-items: center;
}

.generating-banner .spinner {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #3b82f6;
  border-top-color: transparent;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: spin 0.8s linear infinite;
  flex-shrink: 0;
}

.generating-step {
  font-size: 24rpx;
  color: #1e40af;
  font-weight: 500;
  flex: 1;
}

.generating-percent {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: 600;
  margin-left: 12rpx;
}

.generating-detail {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
  margin-top: 8rpx;
  padding-left: 36rpx;
}

.progress-bar {
  height: 6rpx;
  background: #bfdbfe;
  border-radius: 3rpx;
  margin-top: 12rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #2563eb);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ========== 文章列表 ========== */
.list {
  margin-top: 4rpx;
}

/* ========== 文章卡片 ========== */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

.card.vip {
  border-left: 4rpx solid #f59e0b;
  background: linear-gradient(135deg, #ffffff 0%, #fffbeb 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.source {
  font-size: 22rpx;
  color: #6b7280;
  background: #f1f5f9;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score {
  font-size: 22rpx;
  color: #10b981;
  font-weight: 600;
  background: #ecfdf5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.card-summary {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.vip-tag {
  display: inline-flex;
  align-items: center;
  font-size: 20rpx;
  color: #b45309;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  margin-top: 12rpx;
  font-weight: 500;
}

.vip-tag::before {
  content: "★";
  margin-right: 6rpx;
  font-size: 18rpx;
}

/* ========== 骨架屏样式 ========== */
.skeleton-list {
  margin-top: 4rpx;
}

.skeleton-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.skeleton-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.skeleton-source {
  width: 120rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 6rpx;
}

.skeleton-score {
  width: 80rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 6rpx;
}

.skeleton-title {
  width: 100%;
  height: 36rpx;
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.skeleton-summary {
  width: 100%;
  height: 28rpx;
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.skeleton-summary.short {
  width: 70%;
}

/* ========== 错误状态 ========== */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  margin-top: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-title {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 48rpx;
  border-radius: 12rpx;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 32rpx;
  text-align: center;
}

.generate-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 48rpx;
  border-radius: 12rpx;
  border: none;
}

.generate-btn::after {
  border: none;
}

/* ========== 重新生成按钮 ========== */
.regenerate-section {
  padding: 24rpx 0 40rpx;
  display: flex;
  justify-content: center;
}

.regenerate-btn {
  background: #f8fafc;
  color: #6b7280;
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  border-radius: 10rpx;
  border: 1rpx solid #e5e7eb;
}

.regenerate-btn::after {
  border: none;
}
