/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #f8fafc;
}

.loading-container text {
  color: #6b7280;
  font-size: 28rpx;
}

/* ‰∏ªÂÆπÂô® */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 24rpx;
}

.container.has-nav {
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* ========== ÊñáÁ´†Â§¥ÈÉ® ========== */
.article-header {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1.5;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
}

.source {
  font-size: 24rpx;
  color: #3b82f6;
  background: #eff6ff;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.date {
  font-size: 24rpx;
  color: #9ca3af;
}

.authors {
  width: 100%;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* ========== ÊëòË¶ÅÂç°Áâá ========== */
.summary-box {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.summary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
}

.label::before {
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 24rpx;
  background: #3b82f6;
  border-radius: 3rpx;
  margin-right: 12rpx;
}

.toggle-btn {
  font-size: 24rpx;
  color: #3b82f6;
  padding: 8rpx 16rpx;
  background: #eff6ff;
  border-radius: 8rpx;
  font-weight: 500;
}

.toggle-btn:active {
  background: #dbeafe;
}

.summary {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.9;
  text-align: justify;
}

/* ========== Êìç‰ΩúÊåâÈíÆ ========== */
.action-btns {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.link-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: #ffffff;
  color: #374151;
  border: 2rpx solid #e5e7eb;
  font-size: 28rpx;
  border-radius: 16rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.link-btn::before {
  content: "üîó";
  font-size: 28rpx;
  margin-right: 8rpx;
}

.link-btn:active {
  background: #f8fafc;
  transform: scale(0.98);
}

.bookmark-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 88rpx;
  background: #ffffff;
  color: #374151;
  border: 2rpx solid #e5e7eb;
  font-size: 28rpx;
  border-radius: 16rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.bookmark-btn:active {
  transform: scale(0.98);
}

.bookmark-btn.bookmarked {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-color: #fcd34d;
  color: #b45309;
}

.bookmark-icon {
  font-size: 32rpx;
}

/* ========== Â∫ïÈÉ®ÂØºËà™Ê†è ========== */
.nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.nav-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #3b82f6;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.nav-btn:first-child {
  margin-right: 8rpx;
}

.nav-btn:last-child {
  margin-left: 8rpx;
}

.nav-btn:active {
  background: #eff6ff;
}

.nav-btn.disabled {
  color: #d1d5db;
  pointer-events: none;
}

.nav-btn.disabled:active {
  background: transparent;
}
