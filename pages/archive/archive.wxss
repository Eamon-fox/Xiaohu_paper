.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 24rpx;
}

/* ========== Â§¥ÈÉ® ========== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 4rpx 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

/* ========== ÊèêÁ§∫‰ø°ÊÅØ ========== */
.auto-tip {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #bfdbfe;
}

.auto-tip::before {
  content: "üìã";
  font-size: 24rpx;
  margin-right: 10rpx;
}

.auto-tip text {
  font-size: 24rpx;
  color: #1e40af;
  font-weight: 500;
}

/* ========== Âä†ËΩΩÁä∂ÊÄÅÈ™®Êû∂Â±è ========== */
.loading-state {
  margin-top: 8rpx;
}

.skeleton-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.skeleton-date {
  width: 200rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 8rpx;
}

.skeleton-count {
  width: 80rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ========== Á©∫Áä∂ÊÄÅ ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.6;
}

/* ========== Êó•ÊúüÂàóË°® ========== */
.list {
  margin-top: 8rpx;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.date-item:active {
  transform: scale(0.98);
  background: #f8fafc;
}

.date-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.date {
  font-size: 30rpx;
  color: #1f2937;
  font-weight: 600;
}

.time {
  font-size: 24rpx;
  color: #9ca3af;
}

.count-badge {
  font-size: 26rpx;
  color: #10b981;
  background: #ecfdf5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
